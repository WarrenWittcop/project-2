                type="text" 
                name="name" 
                id="name" 
                placeholder="Your name"/>
            </div>

            <div>
                <label for="Class">Select a class!:</label>
                <select id="dynamicDropdown" name="Class">
                    <option value="Knight">Knight</option>
                    <option value="Paladin">Paladin</option>
                    <option value="Thief">Thief</option>
                    <option value="Ranger">Ranger</option>
                    <option value="Archer">Archer</option>
                    <option value="Monk">Monk</option>
                    <option value="Sorceror">Sorceror</option>
                    <option value="Cleric">Cleric</option>
                    <option value="Druid">Druid</option>
                </select>
            </div> 

            <div>
                <label for="skill1">First skill selection</label>
                <input 
                class="form-control"
                type="text" 
                name="skill1" 
                id="skill1" 
                placeholder="First Choice?">
            </div>

            <div>
                <label for="skill2">Second skill selection</label>
                <input 
                class="form-control"
                type="text" 
                name="skill2" 
                id="skill2" 
                placeholder="Second Choice?">
            </div>
      
            <div>
                <label for="race">Select Race</label>
                <select id="datasetSelector" name="race" onchange="updateTable()">
                    <option value="Goblin">Goblin</option>
                    <option value="Human">Human</option>
                    <option value="Elf">Elf</option>
                    <option value="Dwarf">Dwarf</option>
                </select>
            </div>
            <div id="tableContainer">
            </div>      

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    updateAttributes();
                });
            
                function updateAttributes() {
                    const races = ["Goblin", "Human", "Elf", "Dwarf"];
                    const attributeContainer = document.getElementById("attributeContainer");
            
                    let attributeContent = "<table><tr><th>Race</th>";
            
                    races.forEach(race => {
                        attributeContent += `<th>${race}</th>`;
                    });
            
                    attributeContent += "</tr>";
            
                    const attributes = [
                        { name: "Might" },
                        { name: "Intellect" },
                        { name: "Personality" },
                        { name: "Endurance" },
                        { name: "Accuracy" },
                        { name: "Speed" },
                        { name: "Luck" }
                    ];
            
                    attributes.forEach(attribute => {
                        attributeContent += `<tr><td>${attribute.name}</td>`;
            
                        races.forEach(race => {
                            const initialAttributeValues = getInitialAttributeValues(race);
                            const index = attributes.findIndex(attr => attr.name === attribute.name);
                            attributeContent += `<td>${initialAttributeValues[index]}</td>`;
                        });
            
                        attributeContent += "</tr>";
                    });
            
                    attributeContent += "</table>";
            
                    if (attributeContainer) {
                        attributeContainer.innerHTML = attributeContent;
                    }
                }
            
